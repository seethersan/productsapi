Resources:
    AWSEBRDSDatabase:
        Type: AWS::RDS::DBInstance
        Properties:
            AllocatedStorage: 5
            DBInstanceClass: db.t2.micro
            StorageType: gp2
            DBName: "products"
            Engine: postgres
            EngineVersion: 11.6
            MasterUsername: "postgres"
            MasterUserPassword: "Pd6=5=vQ5_2LMwCc"
            DBSecurityGroups: 
            - { "Ref" : "DBSecurityGroup" }
    DBSecurityGroup:
        Type: AWS::RDS::DBSecurityGroup
        Properties:
            DBSecurityGroupIngress:
                EC2SecurityGroupName:
                    { "Ref" : "AWSEBSecurityGroup" }
            GroupDescription: Backend Access
Outputs:
    EndpointAddress:
        Description: Address of the RDS endpoint.
        Value: { "Fn::GetAtt" : [ "AWSEBRDSDatabase", "Endpoint.Address" ]}
        Export:
            Name: EndpointAddress
option_settings:
    aws:elasticbeanstalk:application:environment:
        RDS_DB_NAME: products
        RDS_HOSTNAME: '`{ "Fn::GetAtt" : [ "AWSEBRDSDatabase", "Endpoint.Address" ]}`'
        RDS_USERNAME: postgres
        RDS_PASSWORD: Pd6=5=vQ5_2LMwCc
        RDS_PORT: '`{ "Fn::GetAtt" : [ "AWSEBRDSDatabase", "Endpoint.Port" ]}`'
